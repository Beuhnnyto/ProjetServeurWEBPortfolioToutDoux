portefolio.exemple.com {
	tls internal
	root * portefolio
	file_server browse
	reverse_proxy / http://localhost:80
	reverse_proxy / https://localhost:443
}

todolist.exemple.com {
	tls internal
	root * todo-list
	file_server browse
	encode gzip
	reverse_proxy / http://localhost:4000
	reverse_proxy / https://localhost:4000
}